{
  "name": "teaching-fish-keepers",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "@types/bun": "latest",
    "lefthook": "^2.1.1",
    "lint-staged": "^16.2.7"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "prepare": "lefthook install",
    "postinstall": "git config --unset-all --local core.hooksPath 2>/dev/null || true && lefthook install",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write ."
  }
}
